@page "/ConsultaDetalles"
@using DetalleyConsulta.Detalle;


<EditForm Model="lista">
    <DataAnnotationsValidator />

    <div class="card">

        <div class="card-header">
            <h3>
                <center> <b>Consulta de Detalles</b></center>
            </h3>
        </div>

        <div class="card-body">

            <form>

                <div class="input-group d-flex align-items-end">

                    <InputSelect class="form-control col-2" @bind-Value="filtro">
                        <option value="0">Todos </option>
                        <option value="1">ID</option>
                        <option value="2">Descripcion</option>
                        <option value="3">Presentacion</option>
                        <option value="4">Precio</option>
                        <option value="5">Existencia Empaque</option>
                    </InputSelect>

                    <div class="flex-fill mx-2">
                        <label>Criterio</label>
                        <input type="text" class="form-control" @bind="Criterio" />
                    </div>

                    <button type="button" class="btn btn-warning" @onclick="Buscar">
                        <i class="oi oi-magnifying-glass mr-2" /> <b> Buscar</b>
                    </button>
                </div>

            </form>
        </div>
        <table class="table table-success table-striped">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>ID</th>
                    <th>Descripcion</th>
                    <th>Presentacion</th>
                    <th>Precio</th>
                    <th>Existencia Empaque</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in lista2)
                {
                    <tr>
                        <td>@item.ProductoId</td>
                       @*  <td>@item.lista.Descripcion</td> *@
                         <td>@item.Presentacion</td> 
                        <td>RD$@item.Precio</td>
                         <td>@item.ExistenciaEmpaque</td> 
                    </tr>
                }
            </tbody>

        </table>
    </div>
</EditForm>

@code {
    public string filtro { get; set; }
    public string Criterio { get; set; }
 public List<Productos> lista { get; set; } = new List<Productos>();
    public virtual List  <ProductosDetalle> lista2 { get; set; } = new List<ProductosDetalle>();
       


    public ProductosBLL productosBLL { get; set; }

    private void Buscar()
    {
        if (Criterio != null)
        {
            switch (filtro)
            {
                case "1":
                    lista = productosBLL.GetList(p => p.ProductoId == int.Parse(Criterio));
                    break;
                case "2":
                    lista = productosBLL.GetList(p => p.Descripcion.ToLower().Contains(Criterio.ToLower()));
                    break;
 

            }
        }
        else
        {
            lista = productosBLL.GetList(p => true);
        }
    }
}